---
import '../styles/global.css'
import '../styles/components.css'
import Header from '../components/global/Header.astro'
import Footer from '../components/global/Footer.astro'
import SearchModal from '../components/global/SearchModal.astro'
import type { Lang } from '../data/i18n'
import { t } from '../data/i18n'

interface Props {
  lang: Lang
  title?: string
  description?: string
  image?: string
  jsonLd?: Record<string, any>[]
}

const {
  lang,
  title,
  description,
  image = '/og-image.png',
  jsonLd,
} = Astro.props

const strings = t(lang)
const pageTitle = title || strings.siteTitle
const pageDescription = description || strings.siteDescription
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const ogImageURL = new URL(image, Astro.site)
const gaId = 'G-WH1C8CM79E'
const altLang = lang === 'en' ? 'fr' : 'en'
const altUrl = lang === 'en'
  ? new URL('/fr' + Astro.url.pathname, Astro.site)
  : new URL(Astro.url.pathname.replace(/^\/fr/, '') || '/', Astro.site)
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Hreflang -->
    <link rel="alternate" hreflang={lang} href={canonicalURL} />
    <link rel="alternate" hreflang={altLang} href={altUrl} />
    <link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site)} />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="author" content="Florian BRUNIAUX" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={strings.ogDescription} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Claude Cowork Guide" />
    <meta property="og:locale" content={lang === 'fr' ? 'fr_FR' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'fr' ? 'en_US' : 'fr_FR'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={strings.twitterDescription} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect -->
    <link rel="preconnect" href="https://img.shields.io" crossorigin />
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />

    <!-- Anti-FOUC: dark mode default -->
    <script is:inline>
      (function() {
        var stored = localStorage.getItem('theme');
        var theme = stored || 'dark';
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>

    <!-- JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "WebSite",
          "@id": "https://cowork.bruniaux.com/#website",
          name: lang === 'fr' ? 'Guide Claude Cowork' : 'Claude Cowork Guide',
          url: Astro.site,
          description: lang === 'fr'
            ? 'Guide gratuit pour Claude Cowork avec 70 prompts et 28 workflows'
            : 'Free guide for Claude Cowork with 70 prompts and 28 workflows',
          inLanguage: lang,
          author: {
            "@type": "Person",
            name: "Florian BRUNIAUX",
            url: "https://github.com/FlorianBruniaux",
            sameAs: [
              "https://github.com/FlorianBruniaux",
              "https://www.linkedin.com/in/florian-bruniaux-43408b83/",
            ],
          },
          potentialAction: {
            "@type": "SearchAction",
            target: "https://cowork.bruniaux.com/?q={search_term_string}",
            "query-input": "required name=search_term_string",
          },
          speakable: {
            "@type": "SpeakableSpecification",
            cssSelector: ["h1", ".hero-tagline", ".hero-stats", "#faq h2", "#faq .faq-item summary", "#faq .faq-item p"],
          },
        },
        {
          "@type": "BreadcrumbList",
          itemListElement: [
            { "@type": "ListItem", position: 1, name: "Home", item: String(Astro.site) },
            ...(lang === 'fr' ? [{ "@type": "ListItem", position: 2, name: "FranÃ§ais", item: String(new URL('/fr/', Astro.site)) }] : []),
          ],
        },
      ],
    })} />

    <!-- Additional JSON-LD (per-page schema) -->
    {jsonLd && jsonLd.map((schema) => (
      <script type="application/ld+json" set:html={JSON.stringify({ "@context": "https://schema.org", ...schema })} />
    ))}

    <!-- Google Analytics 4 via Partytown -->
    <script type="text/partytown" src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script type="text/partytown" define:vars={{ gaId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', gaId);
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-to-content">
      {strings.skipToContent}
    </a>

    <!-- Scroll Progress -->
    <div class="scroll-progress" aria-hidden="true"></div>

    <Header lang={lang} />
    <main id="main-content" class="pt-14">
      <slot />
    </main>
    <Footer lang={lang} />
    <SearchModal lang={lang} />

    <!-- Floating Feedback Button -->
    <a href="https://github.com/FlorianBruniaux/claude-cowork-guide/issues/new" target="_blank" rel="noopener" class="feedback-fab" aria-label={strings.feedbackLabel}>
      ðŸ’¡ <span class="feedback-fab-text">{strings.feedbackText}</span>
    </a>

    <!-- Client scripts -->
    <script>
      // Scroll progress bar
      window.addEventListener('scroll', () => {
        const scrollProgress = document.querySelector('.scroll-progress') as HTMLElement
        if (!scrollProgress) return
        const scrollTop = window.scrollY
        const docHeight = document.documentElement.scrollHeight - window.innerHeight
        const scrollPercent = (scrollTop / docHeight) * 100
        scrollProgress.style.width = scrollPercent + '%'
      })

      // Section fade-in on scroll
      document.body.classList.add('js-loaded')
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible')
          }
        })
      }, { threshold: 0.1 })

      document.querySelectorAll('.section').forEach(section => {
        observer.observe(section)
      })
    </script>
  </body>
</html>
