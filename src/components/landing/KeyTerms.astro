---
import type { Lang } from '../../data/i18n'
import { t } from '../../data/i18n'

interface Props { lang: Lang }
const s = t(Astro.props.lang)
---

<section class="section section--compact" id="terms">
  <div class="container">
    <span class="section-badge">{s.termsBadge}</span>
    <h2 class="section-title">{s.termsTitle}</h2>
    <p class="section-subtitle">{s.termsSubtitle}</p>

    <div class="terms-grid">
      {s.terms.map((term) => (
        <div class="term-card">
          <h3>{term.title}</h3>
          <p>{term.definition}</p>
        </div>
      ))}
    </div>

    <p class="terms-footer" set:html={s.termsFooter} />
  </div>
</section>

<style>
  .terms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .term-card {
    background: var(--surface-elevated);
    border: 1px solid var(--border);
    border-radius: var(--border-radius-lg);
    padding: var(--space-lg);
  }

  .term-card h3 {
    font-size: 1rem;
    margin-bottom: var(--space-xs);
    color: var(--accent);
  }

  .term-card p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  .terms-footer {
    text-align: left;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .terms-footer :global(a) {
    color: var(--accent);
    text-decoration: underline;
  }
</style>
