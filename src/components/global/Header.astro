---
import type { Lang } from '../../data/i18n'
import { t } from '../../data/i18n'

interface Props {
  lang: Lang
}

const { lang } = Astro.props
const s = t(lang)
---

<header class="header">
  <nav class="nav container">
    <a href={lang === 'fr' ? '/fr/' : '/'} class="logo">
      <span class="logo-icon">&gt;_</span>
      <span class="logo-text">{s.logoText}</span>
    </a>
    <div class="nav-links">
      <a href="#features">{s.navFeatures}</a>
      <a href="#workflows">{s.navWorkflows}</a>
      <a href="#prompts">{s.navPrompts}</a>
      <a href="#compare">{s.navCompare}</a>
      <a href={s.navFaqUrl}>{s.navFaq}</a>
      <div class="nav-actions">
        <button id="search-trigger" class="search-trigger" aria-label={s.searchLabel}>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
          <span class="search-kbd">Cmd+K</span>
        </button>
        <a href={s.langSwitchUrl} class="lang-switcher" title={s.langSwitchLabel}>üåê {s.langSwitchText}</a>
        <button class="theme-toggle" id="theme-toggle" role="switch" aria-checked="false" aria-label={s.themeLabel}>
          <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <circle cx="12" cy="12" r="5"/>
            <line x1="12" y1="1" x2="12" y2="3"/>
            <line x1="12" y1="21" x2="12" y2="23"/>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
            <line x1="1" y1="12" x2="3" y2="12"/>
            <line x1="21" y1="12" x2="23" y2="12"/>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
          </svg>
          <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
          </svg>
        </button>
        <a href="https://github.com/FlorianBruniaux/claude-cowork-guide" class="btn btn-primary" target="_blank" rel="noopener">{s.readGuide}</a>
      </div>
    </div>
    <button class="menu-toggle" aria-label={s.menuToggle} aria-expanded="false">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
    </button>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.querySelector('.menu-toggle')?.addEventListener('click', function(this: HTMLElement) {
    const navLinks = document.querySelector('.nav-links')
    if (!navLinks) return
    const isActive = navLinks.classList.toggle('active')
    this.setAttribute('aria-expanded', String(isActive))
  })

  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle')
  function applyTheme(theme: string) {
    document.documentElement.setAttribute('data-theme', theme)
    localStorage.setItem('theme', theme)
    themeToggle?.setAttribute('aria-checked', String(theme === 'dark'))
  }
  const currentTheme = document.documentElement.getAttribute('data-theme')
  themeToggle?.setAttribute('aria-checked', String(currentTheme === 'dark'))
  themeToggle?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme')
    applyTheme(current === 'dark' ? 'light' : 'dark')
  })
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--header-bg);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    box-shadow: var(--shadow-header);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .logo:hover { text-decoration: none; color: var(--text-primary); }

  .logo-icon {
    color: var(--accent);
    font-family: var(--font-mono);
    font-weight: 700;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links a:not(.btn):not(.lang-switcher) {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .nav-links a:not(.btn):not(.lang-switcher):hover {
    color: var(--accent);
    text-decoration: none;
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .lang-switcher {
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: color var(--transition-fast);
  }

  .lang-switcher:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.4rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    min-height: 44px;
    min-width: 44px;
    justify-content: center;
  }

  .theme-toggle:hover { color: var(--accent); }

  [data-theme="dark"] .icon-sun { display: none; }
  [data-theme="dark"] .icon-moon { display: block; }
  [data-theme="light"] .icon-sun,
  :root:not([data-theme]) .icon-sun { display: block; }
  [data-theme="light"] .icon-moon,
  :root:not([data-theme]) .icon-moon { display: none; }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--text-primary);
    min-height: 44px;
    min-width: 44px;
  }

  .menu-toggle svg {
    width: 24px;
    height: 24px;
  }

  @media (max-width: 900px) {
    .nav-links { display: none; }
    .nav-links.active {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 3.5rem;
      left: 0;
      right: 0;
      background: var(--bg-primary);
      border-bottom: 1px solid var(--border);
      padding: 1rem var(--space-lg);
      gap: 1rem;
      z-index: 99;
    }
    .nav-actions { flex-wrap: wrap; }
    .menu-toggle { display: flex; align-items: center; justify-content: center; }
  }
</style>